<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DetailActivity">

        <ImageView
            android:id="@+id/profile_image"
            style="@style/DetailImageStyle"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/detail_title"
            style="@style/DetailTitleStyle"
            android:layout_below="@+id/profile_image"
            android:text="@string/title_detail" />

        <TextView
            android:id="@+id/detail_description"
            style="@style/DetailDescriptionStyle"
            android:layout_below="@+id/detail_title"
            android:text="@string/description_detail" />

        <TextView
            android:id="@+id/detail_info"
            style="@style/DetailInfo"
            android:layout_below="@+id/detail_description"
            android:text="@string/detail_info" />

        <Button
            android:id="@+id/action_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="@string/share" />
    </RelativeLayout>

</ScrollView>